{
  "extends": "@saasfly/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
